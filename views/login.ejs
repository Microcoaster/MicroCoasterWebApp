<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= title %></title>
  <!-- Bootstrap Grid pour la responsivité -->
  <link rel="stylesheet" href="/css/bootstrap-grid.min.css">
  <!-- CSS global (variables, boutons, modals, toasts) -->
  <link rel="stylesheet" href="/css/global.css">
  <!-- CSS spécifique au login -->
  <link rel="stylesheet" href="/css/login.css">
  <link rel="shortcut icon" href="/assets/ico/favicon.ico" type="image/x-icon"/>
</head>
<body>
  <div class="center">
    <div class="box">
      <img src="/assets/img/logo.png" alt="MicroCoaster logo" class="logo">
      <h1>Enter your code</h1>

      <% if (error) { %>
        <div class="error">
          <%= error %>
        </div>
      <% } %>

      <form method="post" action="/login" autocomplete="off">
        <input type="text" name="code" placeholder="Access code" required>
        <button type="submit">Continue</button>
      </form>
    </div>
  </div>

  <!-- Scripts -->
  <script src="/js/global.js"></script>
  <script src="/js/login.js"></script>
</body>
</html>