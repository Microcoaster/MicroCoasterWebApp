<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="env" content="<%= process.env.NODE_ENV || 'production' %>">
  <title><%= t('timelines.title') %> - <%= t('common.app_name') %></title>
  <link rel="stylesheet" href="/css/bootstrap-grid.min.css">
  <link rel="stylesheet" href="/css/global.css">
  <link rel="stylesheet" href="/css/timelines.css">
  <link rel="shortcut icon" href="/assets/ico/favicon.ico" type="image/x-icon"/>
</head>
<body>
  <%- include('partials/navbar', { currentPage: 'timelines', user: user }) %>

  <div class="timeline-app main-content">
    <div class="modules-panel">
      <h3>
        <i class="bi bi-cpu"></i>
        Mes Modules
      </h3>
      
      <div class="modules-list">
        <% modules.forEach(module => { %>
          <div class="module-item" 
               draggable="true"
               data-module-id="<%= module.module_id %>"
               data-module-name="<%= module.name %>"
               data-module-type="<%= module.type %>"
               data-is-online="<%= module.isOnline %>">
            
            <div class="module-header">
              <div class="module-main-line">
                <div class="module-name"><%= module.name || module.module_id %></div>
                <span class="state <%= module.isOnline ? 'online' : 'offline' %>">
                  <%= module.isOnline ? t('common.online') : t('common.offline') %>
                </span>
              </div>
              <div class="module-secondary-line">
                <div class="module-type"><%= module.type %></div>
                <div class="module-id"><%= module.module_id %></div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>

    <div class="timeline-container">
      <div class="timeline-header">
        <div class="timeline-title">
          <i class="bi bi-play-circle"></i>
          <%= t('timelines.timeline_sequencer') %>
        </div>
        
        <div class="timeline-controls">
          <div class="timeline-viewport-info">
            <span class="viewport-indicator" id="viewportIndicator">0s - 30s</span>
            <small class="viewport-help">Shift+molette: naviguer | Ctrl+molette: zoom</small>
          </div>
          <button class="control-btn" id="clearBtn">
            <i class="bi bi-trash"></i> <%= t('timelines.clear') %>
          </button>
          <button class="control-btn" id="saveBtn">
            <i class="bi bi-save"></i> <%= t('common.save') %>
          </button>
          <button class="play-btn" id="playBtn">
            <i class="bi bi-play-fill" id="playIcon"></i>
            <span id="playText"><%= t('timelines.play_timeline') %></span>
          </button>
        </div>
      </div>



      <div class="timeline-workspace">
        <div class="timeline-track" id="timelineTrack">
          <div class="time-markers" id="timeMarkers">
          </div>
          
          <div class="playback-indicator" id="playbackIndicator"></div>
          <div class="timeline-instructions" id="instructions">
            <h4><%= t('timelines.create_sequence') %></h4>
            <p><%= t('timelines.drag_modules_here') %></p>
            <p><%= t('timelines.click_module_configure') %></p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="config-modal" id="configModal">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title" id="modalTitle"><%= t('timelines.module_configuration') %></h3>
        <button class="close-btn" id="closeConfigBtn">&times;</button>
      </div>
      
      <form id="configForm">
        <div class="form-group">
          <label class="form-label" for="moduleName"><%= t('timelines.module_name') %></label>
          <input type="text" class="form-input" id="moduleName" name="moduleName" readonly autocomplete="off">
        </div>
        
        <div class="form-group">
          <label class="form-label" for="moduleDuration"><%= t('timelines.execution_duration') %></label>
          <input type="number" class="form-input" id="moduleDuration" name="moduleDuration" value="2" min="0.1" step="0.1" autocomplete="off">
        </div>
        
        <div class="form-group">
          <label class="form-label" for="moduleDelay"><%= t('timelines.delay_before_next') %></label>
          <input type="number" class="form-input" id="moduleDelay" name="moduleDelay" value="1" min="0" step="0.1" autocomplete="off">
        </div>
        
        <div class="form-group" id="moduleSpecificConfig">
        </div>
        
        <div class="modal-actions">
          <button type="button" class="btn btn-secondary" id="cancelConfigBtn"><%= t('common.cancel') %></button>
          <button type="button" class="btn btn-primary" id="saveConfigBtn"><%= t('common.save') %></button>
        </div>
      </form>
    </div>
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/toast.js"></script>
  <script src="/js/global.js"></script>
  <script src="/js/language.js"></script>
  <script src="/js/timelines.js"></script>
</body>
</html>